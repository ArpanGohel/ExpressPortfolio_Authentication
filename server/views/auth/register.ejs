<%- include ../partials/header.ejs %>
<%- include ../partials/nav.ejs %>

<main class="container">
    <!--Message Area-->
    <%if(messages.length > 0) {%>
        <div class="alert alert-danger">
            <%= messages %>
        </div>
    <% } %>
    <br>
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <h1 style="color:antiquewhite"><u>Register here</u></h1><br>
            <form method="POST" autocomplete="off">
                <fieldset class="form-group">
                    <label for="username" style="color:antiquewhite; font-size: medium">Username: </label><br><br>
                    <input type="text" class="form-control"
                     name="username" placeholder="Enter Username"
                     id="username" required autofocus>
                </fieldset>
            <br>
                <fieldset class="form-group">
                    <label for="password" style="color:antiquewhite; font-size: medium">Password: </label><br><br>
                    <input type="password" class="form-control"
                     name="password" placeholder="Enter Password"
                     id="password" required>
                </fieldset>
            <br>
                <fieldset class="form-group">
                    <label for="email" style="color:antiquewhite; font-size: medium">Email: </label><br><br>
                    <input type="email" class="form-control"
                     name="email" placeholder="Enter Email Address"
                     id="email" required>
                </fieldset>
            <br>
                <fieldset class="form-group">
                    <label for="displayName" style="color:antiquewhite; font-size: medium">Display Name: </label><br><br>
                    <input type="text" class="form-control"
                     name="displayName" placeholder="Enter Display Name"
                     id="displayName" required>
                </fieldset>
            <br>
                <fieldset class="form-group text-right">
                    <input type="submit" class="btn btn-success" value="Register">
                <a href="/" >
                    <input type="button" class="btn btn-warning" value="Cancel">
                </a>
                </fieldset>
            </form>
        </div>
    </div>
 </main>

<%- include ../partials/footer.ejs %>