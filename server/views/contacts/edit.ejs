<%- include ('../partials/header.ejs') %>
<%- include ('../partials/nav.ejs') %>

<!--Content for Edit page-->
<div class="container">
    <div class="row">
    <br>
    <div class="col-md-offset-3 col-md-4">
    <h1 style="color:antiquewhite"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Contact Name"
                    name="name" 
                    value ="<%= contact.name %>"
                    required>
                </div>
            <br>
                <div class="form-group">
                    <label for="numberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="numberTextField"
                    placeholder="Enter the Contact Number"
                    name="number" 
                    value ="<%= contact.number %>"
                    required>
                </div>
            <br>
                <div class="form-group">
                    <label for="emailTextField">Contact Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the Contact Email"
                    name="email" 
                    value ="<%= contact.email %>" 
                    required>
                </div>
                <br>
            <br>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>        

                    <a href="/contactlist" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</div>


